<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="id.dapursegar.app">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">

        <activity
            android:name="id.dapursegar.app.view.login.LoginActivity"
            android:launchMode="singleTask"
            android:windowSoftInputMode="stateHidden|adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".base.webview.BaseWebView"
            android:windowSoftInputMode="stateHidden|adjustResize" />
        <activity
            android:name="id.dapursegar.app.view.register.RegisterActivity"
            android:windowSoftInputMode="stateHidden|adjustResize" />
        <activity
            android:name="id.dapursegar.app.view.forgot.ForgotPasswordActivity"
            android:windowSoftInputMode="stateHidden|adjustResize" />
        <activity
            android:name="id.dapursegar.app.view.forgot.ResetPasswordActivity"
            android:windowSoftInputMode="stateHidden|adjustResize" />
        <activity
            android:name="id.dapursegar.app.view.main.MainActivity"
            android:windowSoftInputMode="adjustNothing|stateAlwaysHidden" />
        <activity
            android:name=".view.search.SearchActivity"
            android:launchMode="singleTask"
            android:windowSoftInputMode="stateHidden|adjustResize" />
        <activity
            android:name=".view.main.profile.edit.EditProfileActivity"
            android:windowSoftInputMode="stateHidden|adjustResize" />
        <activity
            android:name=".view.main.bill.BillFragment"
            android:windowSoftInputMode="stateHidden|adjustResize" />
        <activity
            android:name=".view.payment.PaymentDetailActivity"
            android:windowSoftInputMode="stateHidden|adjustResize" />
        <activity
            android:name=".view.basket.BasketAlertActivity"
            android:windowSoftInputMode="stateHidden|adjustResize" />
        <activity
            android:name=".view.basket.BasketActivity"
            android:windowSoftInputMode="stateHidden|adjustResize" />
        <activity
            android:name=".view.editdetail.EditDetailActivity"
            android:exported="true" />
    </application>

</manifest>